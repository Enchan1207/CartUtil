{
    "manifest_version": 2,
    "name": "ガジェットウィッシュリスト",
    "version": "3.1.0",
    "description": "秋月電子、スイッチサイエンスに「欲しいものリスト」を追加します。",
    "permissions": ["tabs"],
    "icons": {
        "48": "icon48.png"
    },
    "browser_action": {
        "default_popup": "popup/index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "http://akizukidenshi.com/*",
                "https://www.switch-science.com/*"
            ],
            "js": ["cscript/script.js"],
            "css": ["cscript/style.css"]
        }
    ],
    "options_ui": {
        "page": "options/index.html",
        "chrome_style": true 
    } 
}