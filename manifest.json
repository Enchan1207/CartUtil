{
    "manifest_version": 2,
    "name": "CartUtil",
    "version": "1.5.0",
    "description": "共有可能なウィッシュリストを提供します。",
    "permissions": [
        "tabs",
        "storage"
    ],
    "icons": {
        "48": "assets/icons/icon48.png"
    },
    "browser_action": {
        "default_popup": "src/popup/index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "http://akizukidenshi.com/*",
                "https://www.switch-science.com/*"
            ],
            "js": [
                "src/cscript/script.js"
            ],
            "css": [
                "src/cscript/style.css"
            ]
        }
    ],
    "options_ui": {
        "page": "src/options/index.html",
        "chrome_style": true
    }
}
